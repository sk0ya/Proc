<Application x:Class="Proc.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <Application.Resources>
        <!-- Default placeholder brushes (overwritten by ColorTheme.Apply at startup) -->
        <SolidColorBrush x:Key="ThemeBg" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="ThemeBgTransparent" Color="#E0202020"/>
        <SolidColorBrush x:Key="ThemeSurface" Color="#FF252525"/>
        <SolidColorBrush x:Key="ThemeSurfaceAlt" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="ThemeBorder" Color="#FF333333"/>
        <SolidColorBrush x:Key="ThemeAccent" Color="#FFFF8C00"/>
        <SolidColorBrush x:Key="ThemeText" Color="#FFD0D0D0"/>
        <SolidColorBrush x:Key="ThemeSubText" Color="#FFA0A0A0"/>
        <SolidColorBrush x:Key="ThemeDimText" Color="#FF707070"/>
        <SolidColorBrush x:Key="ThemeActiveTime" Color="#FF80FF80"/>
        <SolidColorBrush x:Key="ThemeActiveAccent" Color="#FFFF8C00"/>
        <SolidColorBrush x:Key="ThemeHover" Color="#FF444444"/>
        <SolidColorBrush x:Key="ThemePressed" Color="#FF555555"/>
        <SolidColorBrush x:Key="ThemeCheckBg" Color="#FF333333"/>
        <SolidColorBrush x:Key="ThemeCheckBorder" Color="#FF555555"/>
        <SolidColorBrush x:Key="ThemeInactiveText" Color="#FF606060"/>
        <SolidColorBrush x:Key="ThemeBlackedOutText" Color="#FF505050"/>

        <!-- Dark theme for Calendar (must be app-level to affect internal templates) -->
        <Style TargetType="CalendarDayButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeText}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarDayButton">
                        <Grid>
                            <Border x:Name="Bg" Background="Transparent" CornerRadius="3"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsToday" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ThemeBorder}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="{DynamicResource ThemeAccent}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ThemeAccent}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ThemeBg}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ThemeHover}"/>
                            </Trigger>
                            <Trigger Property="IsBlackedOut" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeBlackedOutText}"/>
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeInactiveText}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CalendarButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeText}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarButton">
                        <Grid>
                            <Border x:Name="Bg" Background="Transparent" CornerRadius="3"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasSelectedDays" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ThemeAccent}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ThemeBg}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ThemeHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CalendarItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarItem">
                        <ControlTemplate.Resources>
                            <DataTemplate x:Key="{x:Static CalendarItem.DayTitleTemplateResourceKey}">
                                <TextBlock Text="{Binding}" Foreground="{DynamicResource ThemeSubText}"
                                           FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                           HorizontalAlignment="Center" Margin="0,4,0,4"/>
                            </DataTemplate>
                        </ControlTemplate.Resources>
                        <Border Background="{DynamicResource ThemeSurface}" BorderThickness="0" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="PART_PreviousButton" Grid.Column="0"
                                            Content="&#x25C0;" FontSize="10"
                                            Background="Transparent" BorderThickness="0"
                                            Foreground="{DynamicResource ThemeSubText}" Cursor="Hand" Padding="8,2"/>
                                    <Button x:Name="PART_HeaderButton" Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            Background="Transparent" BorderThickness="0"
                                            Foreground="{DynamicResource ThemeAccent}" FontFamily="Consolas"
                                            FontSize="13" FontWeight="Bold" Cursor="Hand"
                                            Padding="4,2"/>
                                    <Button x:Name="PART_NextButton" Grid.Column="2"
                                            Content="&#x25B6;" FontSize="10"
                                            Background="Transparent" BorderThickness="0"
                                            Foreground="{DynamicResource ThemeSubText}" Cursor="Hand" Padding="8,2"/>
                                </Grid>
                                <Grid Grid.Row="1" Margin="2,0,2,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid x:Name="PART_MonthView" Grid.Row="0" Visibility="Visible">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                    <Grid x:Name="PART_YearView" Grid.Row="1" Visibility="Hidden">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
