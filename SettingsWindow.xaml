<Window x:Class="Proc.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proc - Settings"
        Width="340" Height="190"
        ResizeMode="NoResize"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen"
        Icon="/Proc.ico"
        KeyDown="Window_KeyDown">

    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" Foreground="#FF8C00"
                   FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>

        <CheckBox x:Name="StartupCheckBox" Grid.Row="2"
                  Content="Windows startup" Foreground="#D0D0D0"
                  FontFamily="Consolas" FontSize="12"
                  Checked="StartupCheckBox_Changed" Unchecked="StartupCheckBox_Changed">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="Bd" Width="16" Height="16" BorderBrush="#555555"
                                            BorderThickness="1" CornerRadius="2" Background="#333333"
                                            VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBlock x:Name="Check" Text="&#x2713;" Foreground="#FF8C00"
                                                   FontSize="12" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Margin="0,-2,0,0"
                                                   Visibility="Collapsed"/>
                                    </Border>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#FF8C00"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#444444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <CheckBox x:Name="ShowTitleCheckBox" Grid.Row="4"
                  Content="Show window title" Foreground="#D0D0D0"
                  FontFamily="Consolas" FontSize="12"
                  Checked="ShowTitleCheckBox_Changed" Unchecked="ShowTitleCheckBox_Changed">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="Bd" Width="16" Height="16" BorderBrush="#555555"
                                            BorderThickness="1" CornerRadius="2" Background="#333333"
                                            VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBlock x:Name="Check" Text="&#x2713;" Foreground="#FF8C00"
                                                   FontSize="12" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Margin="0,-2,0,0"
                                                   Visibility="Collapsed"/>
                                    </Border>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#FF8C00"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#444444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </Grid>
</Window>
