<Window x:Class="Proc.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proc - Settings"
        Width="340" Height="560"
        ResizeMode="NoResize"
        Background="{DynamicResource ThemeBg}"
        WindowStartupLocation="CenterScreen"
        Icon="/Proc.ico"
        KeyDown="Window_KeyDown">

    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <!-- Background color -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <!-- Accent color -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" Foreground="{DynamicResource ThemeAccent}"
                   FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>

        <CheckBox x:Name="StartupCheckBox" Grid.Row="2"
                  Content="Windows startup" Foreground="{DynamicResource ThemeText}"
                  FontFamily="Consolas" FontSize="12"
                  Checked="StartupCheckBox_Changed" Unchecked="StartupCheckBox_Changed">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="Bd" Width="16" Height="16"
                                            BorderBrush="{DynamicResource ThemeCheckBorder}"
                                            BorderThickness="1" CornerRadius="2"
                                            Background="{DynamicResource ThemeCheckBg}"
                                            VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBlock x:Name="Check" Text="&#x2713;"
                                                   Foreground="{DynamicResource ThemeAccent}"
                                                   FontSize="12" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Margin="0,-2,0,0"
                                                   Visibility="Collapsed"/>
                                    </Border>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource ThemeAccent}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeHover}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <CheckBox x:Name="ShowTitleCheckBox" Grid.Row="4"
                  Content="Show window title" Foreground="{DynamicResource ThemeText}"
                  FontFamily="Consolas" FontSize="12"
                  Checked="ShowTitleCheckBox_Changed" Unchecked="ShowTitleCheckBox_Changed">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="Bd" Width="16" Height="16"
                                            BorderBrush="{DynamicResource ThemeCheckBorder}"
                                            BorderThickness="1" CornerRadius="2"
                                            Background="{DynamicResource ThemeCheckBg}"
                                            VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBlock x:Name="Check" Text="&#x2713;"
                                                   Foreground="{DynamicResource ThemeAccent}"
                                                   FontSize="12" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Margin="0,-2,0,0"
                                                   Visibility="Collapsed"/>
                                    </Border>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource ThemeAccent}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeHover}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <CheckBox x:Name="RunAsAdminCheckBox" Grid.Row="6"
                  Content="Run as administrator" Foreground="{DynamicResource ThemeText}"
                  FontFamily="Consolas" FontSize="12"
                  Checked="RunAsAdminCheckBox_Changed" Unchecked="RunAsAdminCheckBox_Changed">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="Bd" Width="16" Height="16"
                                            BorderBrush="{DynamicResource ThemeCheckBorder}"
                                            BorderThickness="1" CornerRadius="2"
                                            Background="{DynamicResource ThemeCheckBg}"
                                            VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBlock x:Name="Check" Text="&#x2713;"
                                                   Foreground="{DynamicResource ThemeAccent}"
                                                   FontSize="12" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Margin="0,-2,0,0"
                                                   Visibility="Collapsed"/>
                                    </Border>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource ThemeAccent}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ThemeHover}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <!-- Background color section -->
        <TextBlock Grid.Row="8" Text="Background" Foreground="{DynamicResource ThemeAccent}"
                   FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>

        <WrapPanel x:Name="BgSwatches" Grid.Row="10" Orientation="Horizontal"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal">
            <Border x:Name="BgPreview" Width="24" Height="24" CornerRadius="3"
                    BorderBrush="{DynamicResource ThemeCheckBorder}" BorderThickness="1"
                    Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBox x:Name="BgHexBox" Width="90" FontFamily="Consolas" FontSize="12"
                     MaxLength="7" VerticalAlignment="Center"
                     Foreground="{DynamicResource ThemeText}"
                     Background="{DynamicResource ThemeCheckBg}"
                     BorderBrush="{DynamicResource ThemeCheckBorder}"
                     CaretBrush="{DynamicResource ThemeText}"
                     Padding="4,3"
                     TextChanged="BgHexBox_TextChanged"/>
        </StackPanel>

        <!-- Accent color section -->
        <TextBlock Grid.Row="14" Text="Accent" Foreground="{DynamicResource ThemeAccent}"
                   FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>

        <WrapPanel x:Name="AccentSwatches" Grid.Row="16" Orientation="Horizontal"/>

        <StackPanel Grid.Row="18" Orientation="Horizontal">
            <Border x:Name="AccentPreview" Width="24" Height="24" CornerRadius="3"
                    BorderBrush="{DynamicResource ThemeCheckBorder}" BorderThickness="1"
                    Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBox x:Name="AccentHexBox" Width="90" FontFamily="Consolas" FontSize="12"
                     MaxLength="7" VerticalAlignment="Center"
                     Foreground="{DynamicResource ThemeText}"
                     Background="{DynamicResource ThemeCheckBg}"
                     BorderBrush="{DynamicResource ThemeCheckBorder}"
                     CaretBrush="{DynamicResource ThemeText}"
                     Padding="4,3"
                     TextChanged="AccentHexBox_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>
